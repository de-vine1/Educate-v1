{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=EducateDb;Port=5435;Username=postgres;Password=devine"
  },
  "Jwt": {
    "Key": "your-secret-key-here-must-be-at-least-32-characters",
    "Issuer": "EducateAPI",
    "Audience": "EducateClient"
  },
  "Cors": {
    "AllowedOrigins": ["*"]
  },
  "Payment": {
    "Paystack": {
      "PublicKey": "pk_test_xxx",
      "SecretKey": "sk_test_xxx",
      "WebhookSecret": "whsec_xxx"
    },
    "Stripe": {
      "PublicKey": "pk_test_xxx",
      "SecretKey": "sk_test_xxx",
      "WebhookSecret": "whsec_xxx"
    }
  },
  "Security": {
    "EncryptionKey": "your-32-character-encryption-key",
    "AuditRetentionDays": 365
  },
  "SendGrid": {
    "ApiKey": "stored-in-user-secrets",
    "SenderEmail": "stored-in-user-secrets",
    "SenderName": "stored-in-user-secrets"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": false,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      }
    ]
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/educate-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
