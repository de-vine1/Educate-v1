{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=EducateDb;Port=5435;Username=postgres;Password=your-db-password"
  },
  "Jwt": {
    "Key": "your-jwt-secret-key",
    "Issuer": "EducateAPI",
    "Audience": "EducateClient"
  },
  "Cors": {
    "AllowedOrigins": ["*"]
  },

  "Security": {
    "EncryptionKey": "your-encryption-key",
    "AuditRetentionDays": 365
  },

  "SendGrid": {
    "ApiKey": "your-sendgrid-api-key",
    "SenderEmail": "noreply@educate.com",
    "SenderName": "Educate Platform"
  },

  "App": {
    "BaseUrl": "https://educate.com",
    "SupportEmail": "support@educate.com"
  },

  "Google": {
    "ClientId": "your-google-client-id",
    "ClientSecret": "your-google-client-secret"
  },

  "Paystack": {
    "SecretKey": "your-paystack-secret-key",
    "PublicKey": "your-paystack-public-key",
    "BaseUrl": "https://api.paystack.co",
    "CallbackUrl": "https://educate.com/payment/callback"
  },

  "Monnify": {
    "ApiKey": "your-monnify-api-key",
    "SecretKey": "your-monnify-secret-key",
    "BaseUrl": "https://sandbox.monnify.com",
    "ContractCode": "your-monnify-contract-code",
    "CallbackUrl": "https://educate.com/payment/callback"
  },

  "IpRateLimiting": {
    "EnableEndpointRateLimiting": false,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      }
    ]
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/educate-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
