{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=EducateDb;Port=5435;Username=postgres;Password=devine"
  },
  "Jwt": {
    "Key": "your-secret-key-here-must-be-at-least-32-characters",
    "Issuer": "EducateAPI",
    "Audience": "EducateClient"
  },
  "Cors": {
    "AllowedOrigins": ["*"]
  },

  "Security": {
    "EncryptionKey": "your-32-character-encryption-key",
    "AuditRetentionDays": 365
  },

  "SendGrid": {
    "ApiKey": "your-sendgrid-api-key",
    "SenderEmail": "noreply@educate.com",
    "SenderName": "Educate Platform"
  },

  "App": {
    "BaseUrl": "https://educate.com",
    "SupportEmail": "support@educate.com"
  },

  "Google": {
    "ClientId": "your-google-client-id",
    "ClientSecret": "your-google-client-secret"
  },

  "IpRateLimiting": {
    "EnableEndpointRateLimiting": false,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      }
    ]
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/educate-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
